<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#488CF4"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/signUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="134dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/gender"
        tools:layout_editor_absoluteY="354dp" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="15"
        android:hint="홍길동"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/edtPhone"
        tools:layout_editor_absoluteX="91dp" />


    <TextView
        android:id="@+id/signUpID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/signUpPW"
        tools:layout_editor_absoluteY="106dp" />

    <EditText
        android:id="@+id/edtSignUpID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="15"
        android:hint="example@abc.com"
        android:inputType="textEmailAddress"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/signUpTitle"
        tools:layout_editor_absoluteX="91dp" />

    <TextView
        android:id="@+id/checkID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="368dp" />

    <TextView
        android:id="@+id/signUpPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="암호"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/checkPW"
        tools:layout_editor_absoluteY="156dp" />

    <EditText
        android:id="@+id/edtSignUpPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="15"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/edtSignUpID"
        tools:layout_editor_absoluteX="91dp" />

    <TextView
        android:id="@+id/checkPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="암호확인"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/birthDay"
        tools:layout_editor_absoluteY="205dp" />

    <EditText
        android:id="@+id/edtCheckPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="15"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/edtSignUpPW"
        tools:layout_editor_absoluteX="91dp" />

    <TextView
        android:id="@+id/comparePW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="368dp" />

    <TextView
        android:id="@+id/birthDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/phone"
        tools:layout_editor_absoluteY="255dp" />

    <EditText
        android:id="@+id/edtBirthDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="15"
        android:hint="ex)19951104"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/edtCheckPW"
        tools:layout_editor_absoluteX="91dp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="393dp" />

    <RadioGroup
        android:id="@+id/genderBtnGroup"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/edtName"
        tools:layout_editor_absoluteX="91dp">

        <RadioButton
            android:id="@+id/radioBtnMan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="남"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioBtnWoman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RadioGroup>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="전화번호"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/name"
        tools:layout_editor_absoluteY="315dp" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="15"
        android:inputType="phone"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/edtBirthDay"
        tools:layout_editor_absoluteX="91dp" />

    <Button
        android:id="@+id/signUpFinish"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="가입 완료"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/genderBtnGroup"
        tools:layout_editor_absoluteX="116dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="94dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="92dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="481dp" />
</android.support.constraint.ConstraintLayout>